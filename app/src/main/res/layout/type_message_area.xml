<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_marginLeft="6dp"

        android:layout_width="0dp"
        android:layout_weight="1"
        android:paddingTop="4dp"
        android:paddingRight="12dp"
        android:background="@drawable/rounded_corner_filled"
        android:gravity="center_vertical"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/emoji"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:scaleType="centerInside"
            android:visibility="visible"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_emoji_emotions_24px"

            android:layout_marginLeft="8dp" />
        <EditText
            android:id="@+id/messageText"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:textColorHint="#737171"
            android:textColor="@color/black"
            android:hint="Enter message"
            android:layout_marginLeft="4dp"
            android:maxLines="5"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:background="@null"
            />

        <ImageView
            android:id="@+id/attachFile"
            android:layout_width="25dp"
            android:layout_height="40dp"
            android:scaleType="centerInside"
            android:visibility="visible"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_attach_file_24px"

            android:layout_marginLeft="8dp" />

        <ImageView
            android:id="@+id/sendImage"
            android:layout_width="25dp"
            android:layout_height="40dp"
            android:scaleType="centerInside"
            android:visibility="visible"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_photo_camera_24px"

            android:layout_marginLeft="8dp" />
    </LinearLayout>


    <ImageView
        android:id="@+id/sendMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:padding="4dp"
        android:visibility="gone"
        android:src="@drawable/ic_baseline_send_24"
        app:tint="#0041ff" />


    <ImageView
        android:id="@+id/sendRecord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:scaleType="centerInside"
        android:visibility="visible"
        android:src="@drawable/ic_group_11976"

        />
</LinearLayout>