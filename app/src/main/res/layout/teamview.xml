<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layoutDirection="rtl"
    android:layout_margin="10dp"
    android:background="@drawable/borderradius"

    >

    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_alignParentRight="true"
        android:layoutDirection="rtl"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_gravity="right"

            android:layout_width="80dp"
            android:layout_height="80dp"
            android:elevation="12dp"
            android:id="@+id/view2"
            android:backgroundTint="#EAE8E8"
            app:cardCornerRadius="50dp"
            android:innerRadius="50dp"
            android:layout_alignParentRight="true"
            android:shape="oval"
            android:thicknessRatio="5.9">
            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/imageView1"
                android:src="@drawable/teamwork"
                android:layout_gravity="center"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_toLeftOf="@id/view2"
            android:id="@+id/teamname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="family"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginRight="10dp"/>



        <TextView
            android:id="@+id/MemberNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="0"
            android:gravity="center_vertical"
            android:layout_gravity="left"
            android:textSize="15dp"

android:layout_below="@id/teamname"
            android:layout_toLeftOf="@id/view2" android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginRight="10dp"/>


    </RelativeLayout>




</LinearLayout>
